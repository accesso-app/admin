{
  "plugins": [
    "stylelint-no-unsupported-browser-features",
    "stylelint-order",
    "stylelint-prettier"
  ],
  "extends": [
    "stylelint-config-recommended",
    "stylelint-config-styled-components",
    "stylelint-config-idiomatic-order"
  ],
  "rules": {
    "plugin/no-unsupported-browser-features": [
      true,
      {
        "browsers": [
          "> 1% and last 2 versions",
          "not IE 11",
          "not IE_Mob 11",
          "not OperaMini all"
        ],
        "severity": "warning"
      }
    ]
  }
}
